params {
    outdir = "./"
    publish_dir_mode = "copy"
    enable_conda = false
    singularity_pull_docker_container = false
}

profiles {
    debug { process.beforeScript = 'echo $HOSTNAME' }
    conda {
        params.enable_conda    = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        docker.enabled         = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    podman {
        podman.enabled         = true
        docker.enabled         = false
        singularity.enabled    = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    shifter {
        shifter.enabled        = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        charliecloud.enabled   = false
    }
    charliecloud {
        charliecloud.enabled   = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
    }
    gls {
        process.executor = 'google-lifesciences'
        params.genome = 'GATK.GRCh38'
        params.genomes_base = 's3://ngi-igenomes/igenomes/'
        includeConfig 'conf/gcp_profile.config'
        includeConfig 'conf/gatkrefs_data.config'
    }
    nibsc {
        params.genome = 'GATK.GRCh37'
        params.genomes_base = '/home/AD/gmackenz/ngi-igenomes/igenomes/'
        includeConfig 'conf/nibsc_profile.config'
        includeConfig 'conf/igenomes_data.config'
    }
    test      { 
        params.genome = 'GATK.GRCh38'
        params.genomes_base = 's3://ngi-igenomes/igenomes/'
        includeConfig 'conf/test_data.config'
        includeConfig 'conf/test_data.config'
    }
}

// Increase time available to build Conda environment
conda { createTimeout = "120 min" }

manifest {
    nextflowVersion = '!>=21.10.3'
}
